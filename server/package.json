{
  "name": "chain-reaction-server",
  "version": "1.0.0",
  "description": "WebSocket server for Chain Reaction game",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
